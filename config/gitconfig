[core]
    editor = vim

[diff]
    tool = icdiff

[difftool]
    prompt = false

[difftool "icdiff"]
    cmd = icdiff -N $LOCAL $REMOTE

[merge]
    tool = meld
    conflictstyle = diff3

[mergetool "meld"]
    cmd = meld --auto-merge -o "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true

[mergetool]
    keepBackup = false

[alias]
    st = status
