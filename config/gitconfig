[core]
    editor = vim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[diff]
    colorMoved = default

[delta]
    navigate = true
    side-by-side = true
    line-numbers = true
    syntax-theme = Dracula

[merge]
    tool = meld
    conflictstyle = diff3

[mergetool "meld"]
    cmd = meld --auto-merge -o "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
    trustExitCode = true

[mergetool]
    keepBackup = false

[alias]
    st = status
    fa = fetch --all --prune
